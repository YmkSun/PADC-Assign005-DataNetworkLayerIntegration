<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppButton">
        <item name="android:paddingStart">@dimen/margin_medium_2</item>
        <item name="android:paddingEnd">@dimen/margin_medium_2</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/white_full</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PrimaryButton" parent="AppButton">
        <item name="android:background">@drawable/bg_round_primary</item>
        <item name="android:foreground">@drawable/bg_ripple_white</item>
    </style>

    <style name="PrimaryBorderButton" parent="AppButton">
        <item name="android:background">@drawable/bg_round_primary_border</item>
        <item name="android:foreground">@drawable/bg_ripple_white</item>
    </style>

    <style name="AppButtonSmall">
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/white_full</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AccentButtonSmall" parent="AppButtonSmall">
        <item name="android:background">@drawable/bg_round_accent_small</item>
        <item name="android:foreground">@drawable/bg_ripple_white</item>
    </style>

</resources>
